<div class="banner"></div>

{{outlet}}

<section>
  <div class="context">
    {{back-link}}
    {{home-link}}
  </div>

  <div class="main">

    <div class="name">
      {{#if model.otherOrganizationName}}
        <h1>{{title-case model.otherOrganizationName}} <span class='npi'>{{model.id}}</span></h1>
        <h2>{{title-case model.organizationNameLegalBusinessName}}</h2>
      {{else}}
        <h1>{{title-case model.organizationNameLegalBusinessName}} <span class='npi'>{{model.id}}</span></h1>
      {{/if}}
    </div>

    {{address-map class='practice' label='Practice Location Information' location=model.practiceLocationAddress}}

    {{address-map class='mailing' label='Mailing Information' location=model.mailingAddress}}

    {{other-information class='otherinformation' taxonomyLicenses=model.taxonomyLicenses otherProviderIdentifiers=model.otherProviderIdentifiers }}

    {{#if model.providers}}
    <div class="affiliated">
      <p class="label">Affiliated Providers</p>
      <table class="affiliations">
        {{#each model.providers key="@index" as |provider|}}
          <tr>
            <td class="providername">
              {{#link-to 'providers/show' provider.id class="affiliation"}}{{title-case provider.fullName}}{{/link-to}}
              {{matching-esi entity=provider services=model.electronicServices}}
            </td>
            <td class="taxonomyname"><span class="taxonomy">{{provider.classificationSummary}}</span></td>
          </tr>
        {{/each}}
      </table>
    </div>
    {{/if}}

  </div>

</section>
