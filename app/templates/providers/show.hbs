<div class="banner"></div>

{{outlet}}
<section>
  <div class="context">
    {{home-link}}
    {{back-link tagName="h1"}}

    {{!-- <div class="actions">
      {{#link-to '' class='correct' tagName='button'}}Correct this information{{/link-to}}
    </div> --}}

  </div>
  <div class="main">
    <div class="name">
      <h1>{{#if model.female}}{{fa-icon 'venus' fixedWidth=true}}{{/if}}{{#if model.male}}{{fa-icon 'mars' fixedWidth=true}}{{/if}}
        {{#if model.otherFullName}}{{model.otherFullName}}{{else}}{{model.fullName}}{{/if}}
        <span class='npi'>{{model.id}}</span></h1>

      {{#if model.otherFullName}}<h2>Full name: {{model.fullName}}</h2>{{/if}}
    </div>

    <div class="affiliations">
      <p class="label">Group Affiliations</p>
      {{#each model.organizations key="@index" as |organization|}}
        {{#link-to 'organizations/show' organization.id}}
          {{organization.organizationNameLegalBusinessName}}
          {{#if organization.otherOrganizationName}}
            ({{organization.otherOrganizationName}})
          {{/if}}
        {{/link-to}}
      {{/each}}
    </div>
    
    {{address-map class='practice' label='Practice Location Information' location=model.practiceLocationAddress}}
    
    {{address-map class='mailing' label='Mailing Information' location=model.mailingAddress}}

    {{other-information class='otherinformation' taxonomyLicenses=model.taxonomyLicenses otherProviderIdentifiers=model.otherProviderIdentifiers }}

  </div>
</section>
